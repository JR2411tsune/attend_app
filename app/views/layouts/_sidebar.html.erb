<aside class="sidebar" role="navigation" aria-label="生徒一覧">
  <div class="sidebar-header">
    <% if logged_in? %>
      <div class="current_user_container">
        <p class="current_user_status">
          <% if current_user.admin? %>
            管理者
          <% else %>
            <%= current_user.student_no %>
          <% end %>
        </p>
        <p class="current_user_name"><%= current_user.name %></p>
      </div>
    <% end %>
    <button class="sidebar-close" aria-label="サイドバーを閉じる" type="button">×</button>
  </div>
  <span class="sidebar-separator"></span>
  <% if logged_in? && current_user.admin? %>
    <nav class="students-list">
      <% if @students.present? %>
        <ul>
          <% @students.each do |student| %>
            <% next unless student&.id.present? %>
            <li>
              <a href="#" class="student-link" data-url="<%= timetable_student_path(student) %>">
                <span class="student_no"><%= student.student_no %></span>
                <span class="student_name"><%= student.name %></span>
              </a>
            </li>
          <% end %>
        </ul>
      <% else %>
        <ul>
          <li>
            <span class="student_no"><%= current_user.student_no %></span>
            <span class="student_name"><%= current_user.name %></span>
          </li>
        </ul>
      <% end %>
    </nav>
  <% end %>
</aside>