<%= stylesheet_link_tag "sessions", media: "all" %>

<h1>ログイン</h1>
<div class="login-container">
  <% if notice %>
    <p class="notice"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert"><%= alert %></p>
  <% end %>
  <%= form_with url: login_path, method: :post, local: true do |form| %>
    <div class="form-group">
      <%= form.label :student_no, "学籍番号", class: "form-label" %>
      <%= form.text_field :student_no, placeholder: "JX7777", class: "form-field form-student-no" %>
    </div>
    <div class="form-group">
      <%= form.label :password, "パスワード", class: "form-label" %>
      <%= form.password_field :password, placeholder: "200101", class: "form-field form-password" %>
    </div>
    <%= form.submit "ログイン", class: "form-submit" %>
  <% end %>
</div>